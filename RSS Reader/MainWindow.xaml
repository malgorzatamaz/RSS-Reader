<Window x:Class="RSS_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSS_Reader"
        mc:Ignorable="d"
        Title="RSS Reader" Height="550.376" Width="649.022">
    <Window.Resources>
        <XmlDataProvider x:Key="rssData" XPath="//item" Source="http://interia.pl.feedsportal.com/c/34004/f/618045/index.rss"/>
    </Window.Resources>

    <Grid Height="492" VerticalAlignment="Bottom" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="307*"/>
            <RowDefinition Height="154*"/>
        </Grid.RowDefinitions>
        <ComboBox Margin="5" Grid.Row="1" Grid.Column="0" />
        <ListBox x:Name="rssItems" Margin="5,5,2,5" ItemsSource="{Binding Source={StaticResource rssData}}" SelectedIndex="0" 
                 Grid.Row="2" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="50" Margin="3" Source="{Binding XPath=enclosure/@url}" />
                        <TextBlock Margin="3" VerticalAlignment="Center" Text="{Binding XPath=title}" FontWeight="Bold" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Orientation="Vertical" DataContext="{Binding ElementName=rssItems, Path=SelectedItem}"
                    Grid.Row="3" Grid.Column="0">
            <TextBlock Margin="5" FontSize="13" FontWeight="Bold" Text="{Binding XPath=title, Path=InnerText}"/>
            <TextBlock Margin="5" Opacity="0.72" Text="{Binding XPath=pubDate}"/>
            <TextBlock Margin="3" FontStyle="Italic" Text="{Binding XPath=description, Path=InnerText}"/>
        </StackPanel>
    </Grid>
</Window>
