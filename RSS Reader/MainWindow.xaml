<controls:MetroWindow x:Class="RSS_Reader.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      Title="RSS Reader"
                      Width="718.5"
                      Height="543"
                      MinWidth="740"
                      MinHeight="543"
                      Background="AntiqueWhite"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      ResizeMode="CanResizeWithGrip"
                      WindowStartupLocation="CenterScreen"
                      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <ComboBox Name="CbxCategory"
                  Grid.Row="0"
                  Width="250"
                  Height="20"
                  Margin="5"
                  HorizontalAlignment="Left"
                  DisplayMemberPath="Name"
                  ItemsSource="{Binding}"
                  SelectedIndex="0"
                  SelectionChanged="CbxCategory_OnSelectionChanged" />
        <Button Grid.Row="0"
                Width="230"
                Height="20"
                Margin="260,5,5,5"
                HorizontalAlignment="Left">
            Zapisz wszystkie w kategorii
        </Button>
        <Button Grid.Row="0"
                Width="230"
                Height="20"
                Margin="495,5,5,5"
                HorizontalAlignment="Left"
                Command="{Binding SaveSelectedToBaseCommand}" >
            Zapisz wybrany
        </Button>
        <ListBox x:Name="rssItems"
                 Grid.Row="1"
                 Margin="5"
                 ItemsSource="{Binding LineNews}"
                 SelectedIndex="{Binding SelectedIndexListBoxNews,
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}">
            <ListBox.ItemTemplate>
                <DataTemplate x:Name="template">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="50"
                               Margin="5"
                               Source="{Binding LinkImage}" />
                        <TextBlock Name="TxbTitle"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2"
                    Margin="0,0,0,52"
                    Orientation="Vertical">
            <TextBlock Name="TxbTitle"
                       Margin="3"
                       FontSize="13"
                       FontWeight="Bold"
                       Text="{Binding News.Title}" />
            <TextBlock Name="TxbDate"
                       Margin="3"
                       Opacity="0.72"
                       Text="{Binding News.Date}" />
            <ScrollViewer Height="100" VerticalScrollBarVisibility="Auto">
                <TextBlock Name="TxbDescription"
                           Margin="3"
                           FontStyle="Italic"
                           Text="{Binding News.Description}"
                           TextWrapping="Wrap" />
            </ScrollViewer>

        </StackPanel>

    </Grid>
</controls:MetroWindow>
