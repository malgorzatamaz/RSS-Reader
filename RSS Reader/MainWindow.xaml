<controls:MetroWindow x:Class="RSS_Reader.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      Title="RSS Reader"
                      Background="AntiqueWhite"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      ResizeMode="CanResizeWithGrip"
                      WindowStartupLocation="CenterScreen"
                      mc:Ignorable="d" Height="543" Width="718.5" MinWidth="740" MinHeight="543">
    <Window.Resources>
        <XmlDataProvider x:Key="rssData"
                         Source="http://interia.pl.feedsportal.com/c/34004/f/618045/index.rss"
                         XPath="//item" />
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            
        </Grid.Resources>
        <ComboBox Name="CbxCategory" ItemsSource="{Binding}" DisplayMemberPath="Name"
                  Height="20"  Margin="5" HorizontalAlignment="Left" Grid.Row="0" Width="250" SelectedIndex="0">
        </ComboBox>
        <Button Height="20" Width="230" HorizontalAlignment="Left" Margin="260,5,5,5" Grid.Row="0">Zapisz wszystkie w kategorii</Button>
        <Button Height="20" Width="230" HorizontalAlignment="Left" Margin="495,5,5,5"  Grid.Row="0">Zapisz wybrany</Button>
        <ListBox x:Name="rssItems"
                 Grid.Row="1"
                 Margin="5"
                 ItemsSource="{Binding Source={StaticResource rssData}}"
                 SelectedIndex="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="50"
                               Margin="5"
                               Source="{Binding XPath=enclosure/@url}" />
                        <TextBlock Margin="5" Name="TxbTitle"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="{Binding XPath=title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2"
                    DataContext="{Binding ElementName=rssItems,
                                          Path=SelectedItem}"
                    Orientation="Vertical" Margin="0,0,0,52">
            <TextBlock Margin="3" Name="TxbTitle"
                       FontSize="13"
                       FontWeight="Bold"
                       Text="{Binding XPath=title,
                                      Path=InnerText}" />
            <TextBlock Margin="3" Name="TxbDate"
                       Opacity="0.72"
                       Text="{Binding XPath=pubDate}" />
            <TextBlock Margin="3" Name="TxbDescription"
                       FontStyle="Italic"
                       TextWrapping="Wrap"
                       Text="{Binding XPath=description,
                                      Path=InnerText}" Height="170" />
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,174,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</controls:MetroWindow>
