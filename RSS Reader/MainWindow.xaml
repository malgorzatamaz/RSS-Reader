<controls:MetroWindow x:Class="RSS_Reader.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      Name="MainMetroWindow"
                      Title="RSS Reader"
                      Width="718.5"
                      Height="600"
                      MinWidth="740"
                      MinHeight="580"
                      Background="AntiqueWhite"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      ResizeMode="CanResizeWithGrip"
                      WindowStartupLocation="CenterScreen"
                      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>

        <ComboBox Name="CbxCategory"
                  Grid.Row="0"
                  Width="250"
                  Height="30"
                  Margin="5"
                  HorizontalAlignment="Left"
                  BorderBrush="Black"
                  BorderThickness="2"
                  DisplayMemberPath="Name"
                  ItemsSource="{Binding ListCategories}"
                  SelectedIndex="{Binding SelectedIndexCategories,
                                          Mode=TwoWay,
                                          UpdateSourceTrigger=PropertyChanged}" />
        <Button Grid.Row="0"
                Width="230"
                Height="30"
                Margin="260,5,5,5"
                HorizontalAlignment="Left"
                Command="{Binding SaveAllCommand}"
                Style="{DynamicResource SquareButtonStyle}">
            Zapisz wszystkie w kategorii
        </Button>
        <Button Grid.Row="0"
                Width="230"
                Height="30"
                Margin="495,5,5,5"
                HorizontalAlignment="Left"
                Command="{Binding SaveCommand}"
                Style="{DynamicResource SquareButtonStyle}">
            Zapisz wybrany
        </Button>
        <ListBox x:Name="rssItems"
                 Grid.Row="1"
                 Margin="5"
                 BorderThickness="1"
                 ItemsSource="{Binding LineNews}"
                 SelectedIndex="{Binding SelectedIndexListBoxNews,
                                         Mode=TwoWay,
                                         UpdateSourceTrigger=PropertyChanged}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="50"
                               Margin="5"
                               Source="{Binding UrlImage}" />
                        <TextBlock Name="TxbTitle"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2"
                    Margin="10,3,3,0"
                    Orientation="Vertical">
            <TextBlock Name="TxbTitle"
                       FontSize="13"
                       FontWeight="Bold"
                       Text="{Binding News.Title}" />
            <TextBlock Name="TxbDate"
                       Opacity="0.72"
                       Text="{Binding News.Date}" />
            <TextBox Name="TxbDescription"
                     MinHeight="15"
                     MaxHeight="100"
                     Background="{Binding ElementName=MainMetroWindow,
                                          Path=Background}"
                     BorderThickness="0"
                     FontStyle="Italic"
                     IsReadOnly="True"
                     ScrollViewer.CanContentScroll="True"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                     Text="{Binding News.Description}"
                     TextWrapping="Wrap" />
            <TextBlock Margin="0,0,0,0">
                <Hyperlink Command="{Binding OpenWebsiteCommand}">
                    <Run Text="Przejdź na strone" />
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
